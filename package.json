{
  "name": "estudo-tracker",
  "version": "1.0.0",
  "description": "Aplicativo para gerenciamento de estudos",
  "main": "js/main.js",
  "author": "Alan Prates dos Santos",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^23.3.13",
    "electron-builder": "^23.0.0"
  },
  "build": {
    "appId": "com.alanprates.estudotracker",
    "productName": "Estudo Tracker",
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "assets/**/*",
      "styles/**/*",
      "modules/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/student.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/student.ico",
      "uninstallerIcon": "assets/student.ico",
      "installerHeaderIcon": "assets/student.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/",
      "category": "Utility"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/student.ico",
      "category": "public.app-category.utilities"
    }
  }
}
